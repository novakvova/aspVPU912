@model HomeIndexViewModel

<h1>Список авто</h1>

@await Html.PartialAsync("_Search", Model.Search)

<a asp-action="Create" class="btn btn-success">Додати авто</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Марка</th>
            <th scope="col">Модель</th>
            <th scope="col">Image</th>
            <th scope="col">Рік</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cars)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Mark</td>
                <td>@item.Model</td>
                <td>
                    <img src="/images/@item.Image" alt="Alternate Text" width="150" />    
                </td>
                <td>@item.Year</td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Pagination", Model)